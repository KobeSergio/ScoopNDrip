@model InventoryManagementSystem.Models.user 
@{
    ViewBag.Title = "Index";
    Layout = "";
} 
<head>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport"> 
    @Styles.Render("~/dist/css/adminlte")
    <link href="~/plugins/bootstrap/css/bootstrap.css" rel="stylesheet"/> 
</head>
<body class="hold-transition login-page">
    @using (Html.BeginForm("Autherize", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken() 
        <div class="login-box">
            <div class="login-logo">
                <a><b>Scoop N' Drip</b> IMS</a>
            </div>
            <!-- /.login-logo -->
            <div class="login-box-body">
                <p class="login-box-msg">Sign in to start your session</p> 
                <form method="post">
                    <label>Username: </label>
                    <div class="form-group has-feedback">
                        @Html.EditorFor(model => model.user_username, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.user_username, "", new { @class = "text-danger" })
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    </div>
                    <label>Password: </label>
                    <div class="form-group has-feedback">
                        @Html.PasswordFor(model => model.user_pass, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.user_pass, "", new { @class = "text-danger" })
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            @Html.DisplayFor(model => model.LoginErrorMessage, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                        </div>
                    </div>
                </form> 
            </div> 
        </div> 
    }   
</body>
 