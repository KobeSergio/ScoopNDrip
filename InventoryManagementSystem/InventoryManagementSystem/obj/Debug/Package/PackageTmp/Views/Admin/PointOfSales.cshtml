                                                        <div class="col-md-6">
                                                            <label class="ui-controlgroup-label">Ingredients</label>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <label class="ui-controlgroup-label">Amount</label>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <label class="ui-controlgroup-label">Unit</label>
                                                        </div>
                                                    </div>
                                                    <div class="row">
